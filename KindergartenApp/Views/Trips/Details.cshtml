@model KindergartenApp.Models.Trip

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Trip</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.TripTitle)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TripTitle)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
<hr />
<div>
    <h4>Trip Details</h4>
    <table class="table">
        <tr>
            <th>
                Destination
            </th>
            <th>
               TimeStart
            </th>
            <th>
                TimeEnd
            </th>
            <th>
                Activity
            </th>
            <th>
                Food
            </th>
            <th>
                Budget
            </th>
            <th>
                TripTitle
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model.TripDetails)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Destination)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TimeStart)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TimeEnd)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Activity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Food)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Budget)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Trip.TripTitle)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", "TripDetails",new { id = item.Id }, null) |
                    @Html.ActionLink("Details", "Details", "TripDetails", new { id = item.Id }, null) |
                    @Html.ActionLink("Delete", "Delete", "TripDetails", new { id = item.Id }, null)
                </td>
            </tr>
        }

    </table>

</div>