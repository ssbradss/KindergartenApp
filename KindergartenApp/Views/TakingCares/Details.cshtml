@model KindergartenApp.Models.TakingCare

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>TakingCare</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.TakingCareTitle)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TakingCareTitle)
        </dd>

    </dl>
</div>
<hr />
<div>
    <h4>TakingCare Details</h4>
    <table class="table  table-striped">
        <tr>
            <th>
                TakingCare Details
            </th>
            <th>
                FoodMenu
            </th>
            <th>
                Activity
            </th>
            <th>
                Note
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model.TakingCareDetails)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Meal)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FoodMenu)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Activity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Note)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", "TakingCareDetails", new { id = item.Id }, null) |
                    @Html.ActionLink("Details", "Details", "TakingCareDetails", new { id = item.Id }, null) |
                    @Html.ActionLink("Delete", "Delete", "TakingCareDetails", new { id = item.Id }, null)
                </td>
            </tr>
        }
        </table>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
